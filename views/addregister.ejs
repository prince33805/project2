    <%- include layout %>
      <div class="container">
        
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>

        <% if(locals.errors) { %>
          <ul class="alert alert-danger">
            <% Object.values(errors).forEach(function (error){ %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        <% } %>

        <!-- <form action="/register/add" method="post"> -->
        <!-- <form action="/register/user" method="post"> -->
        <hr>

        <form action="/register/user" method="post" >

          <div class="form-group">
              <label for="">Name</label>
              <input type="text" name="name" class="form-control" placeholder="Enter Name" required>
          </div>

          <div class="form-group">
              <label for="">Email</label>
              <input type="email" name="email" class="form-control" placeholder="Enter Email" required >
          </div>

          <div class="form-group">
            <label for="">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter Password" required minlength="6">
          </div>

          <div class="form-group">
              <label for="">Address</label>
              <input type="text" name="address" class="form-control" placeholder="Enter Address" required >
          </div>

          <div class="form-group">
              <label for="">Telephone</label>
              <input type="number" name="telephone" class="form-control" placeholder="Enter Telephone Number" required >
          </div>
          <input type="submit" value="submit" class="btn btn-primary">

          <hr>
          <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
       
        </form>

